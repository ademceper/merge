{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@/*": ["./*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
